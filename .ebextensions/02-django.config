container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate"
    leader_only: true
  02_createsu:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && cd /var/app/current && python3 manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && cd /var/app/staging && python3 manage.py collectstatic --noinput"
  04_seed:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && cd /var/app/current && python3 manage.py seed_users --number 150 && python3 manage.py seed_rooms --number 150 && python3 manage.py seed_facilities --number 10 && python3 manage.py seed_amenities --number 10"
option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: config.settings
  aws:elasticbeanstalk:container:python:
    WSGIPath: config.wsgi:application
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static
  
